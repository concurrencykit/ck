#! /usr/bin/make -f 

clean: 
	dh_testdir
	dh_clean
	-$(MAKE) clean

build: build-stamp

build-stamp:
	./configure --prefix=/usr --libexecdir=/usr/lib
	$(MAKE)
	touch $@

install: build install-stamp
install-stamp: 
	dh_testdir
	dh_testroot
	dh_clean -k
	dh_installdirs
	
	$(MAKE) install DESTDIR=$(CURDIR)/debian/tmp

	touch $@
	
	
binary-indep: install
	dh_testdir
	dh_testroot
	dh_install -i
	dh_installdocs -i
	dh_installchangelogs -i
	dh_installinit  -i
	dh_installcron -i
	dh_compress -i
	dh_fixperms -i
	dh_installdeb -i
	dh_gencontrol -i
	dh_md5sums -i
	dh_builddeb -i

binary-arch: install
	dh_testdir
	dh_testroot
	dh_install -a --autodest
	dh_installdocs -a
	dh_installchangelogs -a
	dh_installinit -a
	dh_installcron -a
	dh_makeshlibs -a
	dh_shlibdeps -a
	dh_compress -a
	dh_fixperms -a
	dh_installdeb -a
	dh_gencontrol -a
	dh_md5sums -a
	dh_builddeb -a

binary: binary-arch 
